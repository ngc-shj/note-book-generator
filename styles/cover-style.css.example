
/* 表紙用スタイル */
.cover-container {
    font-size: 10pt;
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* 左寄せ */
    justify-content: center;
    min-height: 100vh;
    text-align: left;
}

.cover-title {
    font-size: 1.8em;
    font-weight: bold;
    margin-bottom: 10px;
}

.cover-subtitle {
    font-size: 1.2em;
    font-style: normal;
    margin-bottom: 20px;
    padding-left: 10px;
}

.cover-image {
    width: auto;
    text-align: center;
    margin: 20px 0;
}

.cover-image img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
}

.cover-description {
    font-size: 1.0em;
    text-align: center;
    width: 100%;
    margin-top: 20px;
}

.cover-author {
    font-size: 1.0em;
    font-weight: bold;
    margin-top: 40px;
    text-align: right;
    width: 100%;
}

/* 裏表紙用スタイル */
.back-cover-container {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    height: 100vh;
}

.back-cover-message {
    text-align: left;
    font-size: 1.2em;
    font-weight: bold;
    padding: 32px 0;
}
